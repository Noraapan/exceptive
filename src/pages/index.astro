<script>
  import { animate, scroll, inView } from "motion";

  inView(".scrollfade-video", () => {
    // starta scrollbaserad animation först när videon är i view
    scroll(
      animate(".scrollfade-video", {
        opacity: [0, 1],
        scale: [0.5, 1],
      }),
      {
        target: document.querySelector(".scrollfade"),
        offset: ["start end", "start start"],
        scrub: true,
      }
    );
  });
</script>







<!-- rörligt grid -->
<script>
  const grid = document.getElementById('grid-bg');
  let targetX = 0;
  let targetY = 0;
  let currentX = 0;
  let currentY = 0;


  document.addEventListener('mousemove', (e) => {
    const ratioX = (e.clientX / window.innerWidth - 0.5);
    const ratioY = (e.clientY / window.innerHeight - 0.5);


    targetX = ratioX * 30; 
    targetY = ratioY * 30;
  });


  function animateGrid() {

    currentX += (targetX - currentX) * 0.08;
    currentY += (targetY - currentY) * 0.08;

    grid.style.transform = `translate(${currentX}px, ${currentY}px)`;

    requestAnimationFrame(animateGrid);
  }

  animateGrid();
</script>



