<section 
  x-data="{ 
    scrollY: 0,
    scrollFactor: window.innerWidth >= 768 ? 0.2 : 0.05 
  }" 
  x-init="
    scrollY = window.scrollY; 
    window.addEventListener('scroll', () => scrollY = window.scrollY); 
    window.addEventListener('resize', () => {
      scrollFactor = window.innerWidth >= 768 ? 0.2 : 0.05
    })
  " 
  class="relative h-screen overflow-hidden"
>
  <!-- Bild -->
  <img class="w-full h-full object-cover" src="/atlanticosprey.jpg" alt="Maritime Rescue image">

  <!-- Rubrik -->
  <h1 
    class="absolute bottom-6 left-11 md:bottom-0 md:left-[850px] 
           text-h1Md md:text-h1 font-black text-white/80 z-10 
           transition-transform duration-100"
    :style="`transform: translateX(-${scrollY * scrollFactor}px)`"
  >
    EXCEPTIVE
  </h1>
</section>






