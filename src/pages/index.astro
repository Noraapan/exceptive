<script>
  import { animate, scroll, inView } from "motion";

  inView(".scrollfade-video", () => {
    // starta scrollbaserad animation först när videon är i view
    scroll(
      animate(".scrollfade-video", {
        opacity: [0, 1],
        scale: [0.5, 1],
      }),
      {
        target: document.querySelector(".scrollfade"),
        offset: ["start end", "start start"],
        scrub: true,
      }
    );
  });
</script>

