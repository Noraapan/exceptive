---
const { variant = "primary", size = "medium", href, target } = Astro.props;

const buttonStyling = "font-orbitron rounded-9 font-black hover:shadow-inner-25 active:shadow-inner-25 transition ease-in-out shadow-drop-50";

const variantClasses = {
  primary: "bg-black-500 text-white hover:bg-blue-500 hover:text-white",
  secondary: "bg-blue-500 text-white hover:bg-white hover:border border-blue-500 hover:text-blue-500",
};

const sizeClasses = {
  large: "text-bodySm md:text-body flex items-center justify-between text-center w-5xl h-ml md:w-8xl md:h-lg xl:w-10xl h-lg px-[20px]",
  medium: "text-bodySm md:text-body flex items-center justify-between text-center w-5xl h-ml md:w-8xl md:h-lg xl:w-10xl h-lg px-[20px]",
  small: "text-bodySm flex items-center justify-between text-center w-5xl h-ml px-[10px]",
};
---

<div>
  {
    href ? (
      <a 
        href={href} 
        target={target} 
        rel={target === "_blank" ? "noopener noreferrer" : undefined} 
        class:list={[buttonStyling, variantClasses[variant], sizeClasses[size], "group"]}
      >
        <slot />
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          class:list={[
            "ml-[22px] w-6 h-6 transition-colors duration-200",
            variant === "primary"
              ? "text-white group-hover:text-white"
              : "text-white group-hover:text-blue-500"
          ]}
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    ) : (
      <button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size], "group"]}>
        <slot />
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          class:list={[
            "ml-[22px] w-6 h-6 transition-colors duration-200",
            variant === "primary"
              ? "text-white group-hover:text-white"
              : "text-white group-hover:text-blue-500"
          ]}
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </button>
    )
  }
</div>
